<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtAddImageFragment"
        android:text="Edit Room Images"
        android:padding="16dp"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/listings_image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAddImageFragment"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/add_photo">
    </ImageView>

    <ImageView
        android:id="@+id/listings_image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/listings_image1"
        app:layout_constraintTop_toBottomOf="@+id/txtAddImageFragment"
        android:scaleType="fitXY"
        android:src="@drawable/add_photo">
    </ImageView>

    <ImageView
        android:id="@+id/listings_image3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/listings_image2"
        app:layout_constraintTop_toBottomOf="@+id/txtAddImageFragment"
        android:scaleType="fitXY"
        android:src="@drawable/add_photo">
    </ImageView>

    <Button
        android:id="@+id/btnAddPost"
        android:text="Add Post"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:backgroundTint="#47A9A3"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="612dp"
        app:layout_constraintTop_toBottomOf="@+id/listings_image3"
        tools:ignore="MissingConstraints,UnknownIdInLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>